# 海曙区事件分析系统配置文件
# 在 start.sh 脚本中会自动加载此配置

# 服务端口配置
BACKEND_PORT=8000
FRONTEND_PORT=3000

# 服务模式配置  
# DEV_MODE=false
# PROD_MODE=false

# 安装配置
# SKIP_INSTALL=false

# 包管理器偏好 (pnpm|yarn|npm)
# PREFERRED_PKG_MANAGER=pnpm

# 健康检查配置
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=1

# 日志配置
ENABLE_DEBUG_LOG=false
LOG_TO_FILE=false
LOG_FILE_PATH="logs/system.log"

# Python 虚拟环境路径（可选）
# PYTHON_VENV_PATH="backend/venv"

# React 构建配置
# REACT_APP_API_URL="http://localhost:8000"
# REACT_APP_TITLE="海曙区事件分析系统" 